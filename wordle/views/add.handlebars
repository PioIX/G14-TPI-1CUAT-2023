<div class="add">
<form action="/addd" method="POST" id="add" class="container-sm">
    <div class="mb-3 form-group">
        <h2>Añadir palabra</h2>
    </div>
    <div class="mb-3 form-group">
            <label for="idadd" class="form-label">ID de la palabra</label>
            <input type="text" class="form-control" id="idaddpalabra" name="editarpalabra" value="" placeholder="Ingrese el ID de la palabra">
        </div>
        <div class="mb-3 form-group">
            <label for="palabraadd" class="form-label">Palabra</label>
            <input type="text" class="form-control" id="addpalabra" name="addpalabra" value="" placeholder="Ingrese la palabra">
        </div>
        <div class="mb-3 form-group">
            <label for="cantidadDeLetras" class="form-label">Cantidad de letras</label>
            <select id="cantletras">
                <option value=4>4</option>
                <option value=5>5</option>
                <option value=6>6</option>
                <option value=7>7</option>
            </select>
        </div>
    <div class="mb-3 form-group">
            <input type="button" class="btn btn-primary" onclick="add()" value="Añadir palabra">
        </div>
    
</form>
</div>
